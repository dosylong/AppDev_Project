@model Project_TMS.Models.Category
@{
	ViewBag.Title = "Create";
}

<h2>Create a new Category</h2>
@Html.ValidationSummary(false, "", new { @class = "text-danger" })

@using (Html.BeginForm("Create", "Categories", FormMethod.Post))
{

	<div class="form-group">
		@Html.LabelFor(c => c.Name)
		@Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
		@Html.ValidationMessageFor(c => c.Name)
	</div>

	<div class="form-group">
		@Html.LabelFor(c => c.Descriptions)
		@Html.TextBoxFor(c => c.Descriptions, new { @class = "form-control" })
		@Html.ValidationMessageFor(c => c.Descriptions)
	</div>
	<button type="submit" class="btn btn-primary">Create</button>
}
