@model Project_TMS.ViewModels.TopicCourseViewModel
@{
	ViewBag.Title = "Create";
}

<h2>Create a new Topic</h2>
@Html.ValidationSummary(false, "", new { @class = "text-danger" })

@using (Html.BeginForm("Create", "Topics", FormMethod.Post))
{

	<div class="form-group">
		@Html.LabelFor(t => t.Topic.Name)
		@Html.TextBoxFor(t => t.Topic.Name, new { @class = "form-control" })
		@Html.ValidationMessageFor(t => t.Topic.Name)
	</div>

	<div class="form-group">
		@Html.LabelFor(t => t.Topic.Descriptions)
		@Html.TextBoxFor(t => t.Topic.Descriptions, new { @class = "form-control" })
		@Html.ValidationMessageFor(t => t.Topic.Descriptions)
	</div>

	<div class="form-group">
		@Html.LabelFor(t => t.Topic.Course.Name)
		@Html.DropDownListFor(t => t.Topic.CourseId,
		 new SelectList(Model.Courses, "Id", "Name"),
		 "Select Course Name",
		 new { @class = "form-control" })
	</div>
	<button type="submit" class="btn btn-primary">Create</button>
}