@model Project_TMS.ViewModels.TopicCourseViewModel
@{
	ViewBag.Title = "Edit";
}

<h2>Edit Topic</h2>

@Html.ValidationSummary(false, "", new { @class = "text-danger" })

@using (Html.BeginForm("Edit", "Topics", FormMethod.Post))
{
	@Html.HiddenFor(t => t.Topic.Id)
	<div class="form-group">
		@Html.LabelFor(t => t.Topic.Name)
		@Html.EditorFor(t => t.Topic.Name, new { htmlAttributes = new { @class = "form-control" } })
		@Html.ValidationMessageFor(t => t.Topic.Name, "", new { @class = "text-danger" })
	</div>

	<div class="form-group">
		@Html.LabelFor(t => t.Topic.Descriptions)
		@Html.EditorFor(t => t.Topic.Descriptions, new { htmlAttributes = new { @class = "form-control" } })
		@Html.ValidationMessageFor(t => t.Topic.Descriptions, "", new { @class = "text-danger" })
	</div>

	<div class="form-group">
		@Html.LabelFor(t => t.Topic.Course.Name)
		@Html.DropDownListFor(t => t.Topic.CourseId,
		 new SelectList(Model.Courses, "Id", "Name"),
		 "Select Course Name",
		 new { @class = "form-control" })
	</div>
	<button type="submit" class="btn btn-primary">Edit</button>
}